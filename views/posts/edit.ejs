<h1>Edit post</h1>

<form action="/posts/<%= post.id %>?_method=PUT" method="POST">
  <div>
    <input
      type="text"
      name="post[title]"
      id="title"
      placeholder="Title"
      value="<%= post.title %>"
    />
  </div>

  <div>
    <input
      type="text"
      name="post[price]"
      id="price"
      placeholder="Price"
      value="<%= post.price %>"
    />
  </div>

  <div>
    <textarea
      name="post[description]"
      id="description"
      placeholder="Description"
    >
<%= post.description %>
    </textarea>
  </div>

  <div>
    <input
      type="text"
      name="post[location]"
      id="location"
      placeholder="Location"
      value="<%= post.location %>"
    />
  </div>

  <button type="submit">Submit</button>
</form>
